{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "/src/config/custom.d.ts"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
